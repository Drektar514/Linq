using System;
using System.Collections.Generic;
using System.Linq;

namespace TopPlayers
{
    class Program
    {
        static void Main(string[] args)
        {
            List<Player> sortedPlayersLevel = new List<Player>();
            List<Player> sortedPlayersPower = new List<Player>();

            List<Player> players = new List<Player>()
            {
                new Player("Derektor",120, 38500),
                new Player("ShizoiD",37, 9750),
                new Player("Ass@sin",149, 49856),
                new Player("Pro100",76, 35791),
                new Player("123qwewq321",54, 11578),
                new Player("Wolk",23, 5236),
                new Player("$her$heny",200, 48300),
                new Player("CMEPchy",198, 50000),
                new Player("Бентли",112, 48357),
                new Player("Tokyo",199, 37600),
            };

            Console.WriteLine("Добро пожаловать, вот наш список игроков - ");

            ShowListInfo(players);

            sortedPlayersLevel = players.OrderByDescending(player => player.Level).Take(3).ToList();
            sortedPlayersPower = players.OrderByDescending(player => player.Power).Take(3).ToList();

            Console.WriteLine("\nTop 3 игрока по силе - ");

            ShowListInfo(sortedPlayersPower);

            Console.WriteLine("\nTop 3 игрока по уровню - ");

            ShowListInfo(sortedPlayersLevel);

            Console.ReadKey();

            void ShowListInfo(List<Player> players)
            {
                foreach (var player in players)
                {
                    player.ShowInfo();
                }
            }
        }
    }

    class Player
    {
        public string Name { get; private set; }
        public int Level { get; private set; }
        public int Power { get; private set; }

        public Player(string name, int level, int power)
        {
            Name = name;
            Level = level;
            Power = power;
        }

        public void ShowInfo()
        {
            Console.WriteLine($"Ник игрока - {Name}, его уровень - {Level}, его сила - {Power}.");
        } 
    }
}
