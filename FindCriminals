using System;
using System.Collections.Generic;
using System.Linq;

namespace FindCriminal
{
    class Program
    {
        static void Main(string[] args)
        {
            int userHeight;
            int userWeight;
            string userNationality;
            bool isNumber;
            bool isWork = true;
            List<Criminal> criminals = new List<Criminal>
            {
                new Criminal("Губила",false,192,89,"Иранец"),
                new Criminal("КимЧинХон",false,150,60,"Кореец"),
                new Criminal("Мачете",false,180,90,"Мексиканец"),
                new Criminal("ШульМиКон",true,192,89,"Кореец"),
                new Criminal("ШульМиБан",false,192,89,"Кореец"),
                new Criminal("КимЛимБим",false,192,89,"Кореец"),
                new Criminal("Калаш",true,175,73,"Иранец"),
                new Criminal("ГинЛинМин",false,205,105,"Кореец"),
                new Criminal("Пуля",false,165,89,"Иранец"),
                new Criminal("Самбреро",false,187,86,"Мексиканец"),
                new Criminal("Торпеда",false,198,89,"Русский"),
                new Criminal("Медведь",false,178,79,"Русский"),
            };

            Console.WriteLine("Добро пожаловать в поисковик преступников, детектив.\nВведите рост, вес и национальность преступника для вывода данных о нём.");
            
            while (isWork)
            {
                Console.Write("Рост - ");
                isNumber = Int32.TryParse(Console.ReadLine(), out userHeight);
                
                if (!isNumber)
                {
                    Console.WriteLine("Вы ввели не число, введите целое число");
                    continue;
                }
                
                Console.Write("Вес - ");
                isNumber = Int32.TryParse(Console.ReadLine(), out userWeight);
                
                if (!isNumber)
                {
                    Console.WriteLine("Вы ввели не число, введите целое число");
                    continue;
                }
                
                Console.Write("Национальность - ");
                userNationality = Console.ReadLine();

                var foundCriminals = from Criminal criminal in criminals
                                     where criminal.Height == userHeight && criminal.Weight == userWeight && criminal.Nationality.Equals(userNationality) && criminal.Arested == false
                                     select criminal;
                foreach (var criminal in foundCriminals)
                {
                    criminal.ShowInfo();
                }
                
                Console.ReadKey();
                Console.Clear();
            }
        }
    }

    class Criminal
    {
        public string NickName { get; private set; }
        public bool Arested { get; private set; }
        public int Height { get; private set; }
        public int Weight { get; private set; }
        public string Nationality { get; private set; }

        public Criminal(string fullName, bool arested, int height, int weight, string nationality)
        {
            NickName = fullName;
            Arested = arested;
            Height = height;
            Weight = weight;
            Nationality = nationality;
        }

        public void ShowInfo()
        {
            Console.WriteLine($"Кличка преступника - {NickName}, рост - {Height},вес - {Weight},национальность - {Nationality}.");
        }
    }
}
